<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_cart_item">

    <ImageView
        android:id="@+id/iv_cart_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/pizza1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_cart_item_info"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="200dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cart_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Pizza 1"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tv_cart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_cart_item_name"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Price: 15$"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_cart_item_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_cart_item_price"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Size: M"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_cart_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_cart_item_size"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Quantity: 2"
            android:textSize="20dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>